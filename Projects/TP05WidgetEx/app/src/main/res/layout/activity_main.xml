<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginVertical="20sp"

    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/moana04"
        android:layout_marginLeft="20dp"



        />


    <TextView
        android:id="@+id/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/profile"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/how"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, how are you today"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@+id/android"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.01.26"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"/>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/profile"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana05"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana01"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana03"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/moana05" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana01"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana02"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana03"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana01"
                android:layout_marginLeft="6dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/moana02"
                android:layout_marginLeft="6dp"/>






        </LinearLayout>



    </ScrollView>


    <LinearLayout
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_below="@id/scroll"
        android:layout_marginTop="20dp"
        android:background="#C1BEBE"/>

    <TextView
        android:id="@id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line01"
        android:text="androidprimeinfo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/metro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:text="Metro Manila Pilippinse"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/metro"
        android:src="@drawable/newyork"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"/>




</RelativeLayout>